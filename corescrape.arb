require 'open-uri'
require 'net/http'
require "nokogiri"




url = "https://en.wikipedia.org/wiki/Douglas_Adams"
uri = URI.parse(url)

response = Net::HTTP.get_response(uri)
html = response.body



doc = Nokogiri::HTML(html)

vivi = doc.css("img").find{|picture| picture.attributes["alt"].value.include?("Douglas adams portrait cropped.jpg")}

puts vivi
